{
  "name": "umbrella-corp",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@7.5.0",
  "scripts": {
    "build": "turbo run build",
    "lint": "eslint",
    "clean": "rm -rf node_modules && pnpm -r exec rm -rf node_modules dist",
    "prepare": "husky install && node ./scripts/post-install.mjs",
    "encrypt": "node ./shared/config-helper/index.mjs encrypt",
    "decrypt": "config-helper decrypt"
  },
  "lint-staged": {
    "**/*.+(mjs|ts|tsx|json|css)": "pnpm prettier --write",
    "**/*.+(mjs|ts|tsx)": "eslint"
  },
  "devDependencies": {
    "@pnpm/find-workspace-dir": "4.0.2",
    "@pnpm/find-workspace-packages": "4.0.18",
    "@pnpm/logger": "4.0.0",
    "@types/lodash": "4.14.182",
    "@types/node": "18.0.3",
    "@typescript-eslint/eslint-plugin": "5.30.5",
    "@typescript-eslint/parser": "5.30.5",
    "chalk": "5.0.1",
    "config-helper": "workspace:*",
    "eslint": "8.19.0",
    "eslint-plugin-react-hooks": "4.6.0",
    "execa": "6.1.0",
    "globby": "13.1.2",
    "husky": "8.0.1",
    "is-ci": "3.0.1",
    "lint-staged": "13.0.3",
    "lodash": "4.17.21",
    "prettier": "2.7.1",
    "replace-in-file": "6.3.5",
    "semver": "7.3.7",
    "turbo": "1.3.1",
    "typescript": "4.7.4",
    "yesno": "0.4.0"
  }
}
