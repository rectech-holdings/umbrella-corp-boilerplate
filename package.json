{
  "name": "umbrella-corp",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --scope=ac-spa --include-dependencies",
    "dev-admin": "turbo run dev --scope=ac-admin-spa --include-dependencies",
    "dev-all": "turbo run dev",
    "deploy": "echo something",
    "lint": "eslint",
    "prepare": "node ./scripts/post-install.mjs && husky install",
    "encrypt": "config-helper encrypt",
    "decrypt": "config-helper decrypt"
  },
  "lint-staged": {
    "**/*.+(mjs|ts|tsx|json|css)": "yarn prettier --write",
    "**/*.+(mjs|ts|tsx)": "eslint"
  },
  "workspaces": {
    "packages": [
      "*",
      "companies/*/*",
      "shared/*"
    ],
    "nohoist": [
      "**/react-native",
      "**/react-native/**"
    ]
  },
  "devDependencies": {
    "@types/lodash": "4.14.182",
    "@typescript-eslint/eslint-plugin": "5.30.5",
    "@typescript-eslint/parser": "5.30.5",
    "chalk": "5.0.1",
    "config-helper": "*",
    "eslint": "8.18.0",
    "eslint-plugin-react-hooks": "4.6.0",
    "execa": "6.1.0",
    "globby": "13.1.2",
    "husky": "^8.0.0",
    "is-ci": "3.0.1",
    "lint-staged": "13.0.3",
    "lodash": "4.17.21",
    "prettier": "2.7.1",
    "replace-in-file": "6.3.5",
    "semver": "7.3.5",
    "ts-node": "10.8.2",
    "turbo": "1.3.1",
    "typescript": "4.7.4",
    "yesno": "0.4.0"
  }
}
